<div class="d-flex justify-content-between align-items-center mx-3">
    <h1 class="m-0">Ultimas entradas</h1>
    <button type="button" class="btn btn-success">Crea uno</button>
</div>

{{#if posts}}
    

{{#each posts}}
        <div id="{{this.slug}}" class="card border-secondary m-3" style="max-width: 100%;">
            <div class="card-header">Posteo</div>
                <div class="card-body">
                <h4 class="card-title">{{this.title}}</h4>
                <p class="card-text">{{{this.body}}}   <a class="vermas" onclick="vermas('{{this.slug}}')">[Ver más]</a></p>
                <a href="./posts/{{this.slug}}" class="btn btn-light text-dark">Ver</a>
                <a href="" class="btn btn-dark text-light">Editar</a>
                <a href="" class="btn btn-primary text-white">Eliminar</a>
            </div>
        </div>
{{/each}}
{{else}}
<hr>
<h2>No existen posts aún</h2>
<div class="d-flex justify-content-center"><img class="card" src="/img/nopost.png" width="250" height="250"></div>

{{/if}}